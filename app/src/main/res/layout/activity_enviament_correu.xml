<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="uf1.infobosccoma.appjob.EnviamentCorreu"
    android:background="#ff000000"
    android:orientation="vertical"
    android:weightSum="1">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etAsumpteEmail"
        android:layout_gravity="center_horizontal"
        android:textColor="#fffff4f6"
        android:text="Asumpte" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/etCosMissatge"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.14"
        android:textColor="#fffffafa"
        android:text="Cos Missatge" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_weight="0.55"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="127dp"></LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="43dp"
        android:weightSum="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enviar"
            android:id="@+id/bttSendEmail" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="123dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.74"></LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CancelÂ·lar"
            android:id="@+id/bttCancelEmail" />
    </LinearLayout>
</LinearLayout>
