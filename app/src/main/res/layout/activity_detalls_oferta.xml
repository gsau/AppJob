<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="uf1.infobosccoma.appjob.DetallsOferta"
    android:background="#ff000000"
    android:weightSum="1"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:weightSum="1">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtTitolDetall"
            android:layout_gravity="center_horizontal"
            android:textColor="#fffcf6ff" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="371dp"
        android:layout_height="63dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtDataDetall"
            android:textColor="#fffffbf7" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="371dp"
        android:layout_height="63dp" >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtCategoriaDetall"
            android:textColor="#fff7f9ff" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="371dp"
        android:layout_height="63dp" >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtEmailEmpresaDetall"
            android:textColor="#fffff5ea" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="371dp"
        android:layout_height="63dp" >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtContracteDetall"
            android:textColor="#fffcfaff" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="371dp"
        android:layout_height="63dp"
        android:layout_weight="0.96"
        android:weightSum="1">

        <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/txtDescricioDetall"
            android:layout_weight="0.85"
            android:textColor="#fffeffef" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:weightSum="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contactar-hi"
            android:id="@+id/bttTrucarTelf" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.82"></LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Enviar Email"
            android:id="@+id/bttEnviarEmail" />
    </LinearLayout>

</LinearLayout>
